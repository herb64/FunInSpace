<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:id="@+id/sv_filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:longClickable="true">

        <LinearLayout
            android:id="@+id/ll_filter_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:longClickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_filter_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star_rate_black_18px" />

            <ImageView
                android:id="@+id/iv_filter_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star_rate_black_18px" />

            <ImageView
                android:id="@+id/iv_filter_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star_rate_black_18px" />

            <ImageView
                android:id="@+id/iv_filter_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star_rate_black_18px" />

            <ImageView
                android:id="@+id/iv_filter_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star_rate_black_18px" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/fab_margin"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_filter_youtube"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/youtube_social_icon_dark" />

            <ImageView
                android:id="@+id/iv_filter_vimeo"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vimeo_icon_dark" />

            <ImageView
                android:id="@+id/iv_filter_video"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/movie_other_64" />


            <!--CheckBox
                android:id="@+id/cb_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone" -->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/fab_margin"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_filter_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_wallpaper_black_24px" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/fab_margin"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_filter_hires_cached"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_save_24px" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>