        -->

    <SwitchPreference
        android:defaultValue="false"
        android:key="wallpaper_shuffle"
        android:summary="Now available for debug testing with Android 5 and higher - shuffle is done at each full hour, if switched on. Still needs some fixing - test it!"
        android:title="Wallpaper shuffle (DEBUG)" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="rgb565_thumbs"
        android:summary="@string/rgb565_thumbs_summary"
        android:title="@string/rgb565_thumbs_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="read_out"
        android:summary="@string/pref_summary_read_text"
        android:title="@string/pref_title_read_text" />

    <!-- 10.11.2017 - add selection of wallpaper image quality -->
    <ListPreference
        android:defaultValue="80"
        android:entries="@array/wp_quality_titles"
        android:entryValues="@array/wp_quality_values"
        android:key="wallpaper_quality"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="@string/wp_quality_summary"
        android:title="@string/wallpaper_quality" />

    <!-- 16.11.2017 - add selection for date format -->
    <ListPreference
        android:defaultValue="@string/df_dd_mm_yyyy"
        android:entries="@array/df_titles"
        android:entryValues="@array/df_values"
        android:key="date_format"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="@string/df_summary"
        android:title="@string/df_title" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="fallback_to_lowres"
        android:summary="@string/lowres_fallback"
        android:title="@string/fallback_lowres_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="full_search"
        android:summary="@string/full_search_explain"
        android:title="@string/search_option" />

