    <SwitchPreference
        android:defaultValue="true"
        android:key="wifi_switch"
        android:summary="@string/pref_description_wifi_required"
        android:title="@string/pref_title_wifi_required" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="hires_save"
        android:summary="@string/hires_save_summary"
        android:title="@string/hires_save_title" />

    <!-- Just as a test, works, but not nice in terms of font size, indenting, and warning
